@page "/CursorPaging"
@using MyCMS.Web.Sample.Data;

@if (ViewModel.HasPreviousPage || ViewModel.HasNextPage)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @if (ViewModel.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" href="#" @onclick="OnPreviousPage">Previous</a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                </li>
            }
            @if (ViewModel.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" href="#" @onclick="OnNextPage">Next</a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Next</a>
                </li>
            }      
        </ul>
    </nav>
}

@code {
    [Parameter]
    public int PageSize {get; set;} = 6;

    [Parameter]
    public ICursorPaging ViewModel { get; set; } = null;

    [Parameter]
    public EventCallback OnPreviousPage { get; set; }

    [Parameter]
    public EventCallback OnNextPage { get; set; }
}